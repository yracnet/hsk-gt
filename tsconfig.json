{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "./test"
  ],
  "include": [
    "./src"
  ]
}